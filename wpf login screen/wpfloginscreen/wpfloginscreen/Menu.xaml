<Window x:Class="wpfloginscreen.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfloginscreen"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        
        <Menu Grid.ColumnSpan="10">
            <MenuItem Header="Menu" FontSize="30" Background="Green" Click="MenuItem_Click" >
                <MenuItem Header="Product" Foreground="Black" FontSize="20" Name="product" Click="product_Click"/>
                <MenuItem Header="Categories" Foreground="Black" FontSize="20" Name="catagori" Click="catagori_Click"/>
                <MenuItem Header="Accounts" Foreground="Black" FontSize="20" Name="account" Click="account_Click"/>
            </MenuItem>
            
        </Menu>

        <DataGrid x:Name="dataGridView" Margin="449,288,44,36" RenderTransformOrigin="0.014,1.225"/>
        <DataGrid x:Name="dataGridView1" Margin="449,160,44,160" RenderTransformOrigin="1.893,-0.153"/>
        <DataGrid x:Name="dataGridView2" Margin="449,28,44,293"/>
    </Grid>
</Window>
